<!-- 
    
Manager Dashboard View

Sign out Button -> _onSignOutPress
To Be Approved Tile: icon, number -> _onPressToBeApproved
Approved Tile: icon, number -> _onPressApproved
Denied Tile: icon, number -> _onPressDenied 

-->

<mvc:View
    controllerName="intern2020.controller.DashboardManager"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout">

<Page title="{i18n>managerDashboard}" showHeader="true" class="w3-backGround" enableScrolling="false">
	<headerContent>
			<Button 
                text="SignOut" 
                press="_onSignOutPress" 
                icon="sap-icon://log">
            </Button>
	</headerContent>
			
	<layout:HorizontalLayout allowWrapping="true">
		<GenericTile
                class="sapUiSmallMarginBegin sapUiSmallMarginTop"
                header="{i18n>toBeApproved}"
                press="_onPressToBeApproved">
                <tileContent>
                    <TileContent>
                        <content>
                            <NumericContent 
                                        id="numericValueTBA"
                                        value=""
									 	icon="sap-icon://pending" 
                                        indicator="None"
                                        valueColor="Neutral" />
                        </content>
                    </TileContent>
                </tileContent>
        </GenericTile>

        <GenericTile
                class="sapUiLargeMarginBegin sapUiSmallMarginTop"
                header="{i18n>isApproved}"
                press="_onPressApproved">
                <tileContent>
                    <TileContent>
                        <content>
                            <NumericContent
                                        id="numericValueA"
                                        value=""
									 	icon="sap-icon://accept" 
                                        indicator="None"
                                        valueColor="Good" />
                        </content>
                    </TileContent>
                </tileContent>
        </GenericTile>

		<GenericTile
                class="sapUiLargeMarginBegin sapUiSmallMarginTop"
                header="{i18n>isDenied}"
                press="_onPressDenied">
                <tileContent>
                    <TileContent>
                        <content>
                            <NumericContent
                                        id="numericValueD"
                                        value=""
									 	icon="sap-icon://decline" 
                                        indicator="None"
                                        valueColor="Error" />
                        </content>
                    </TileContent>
                </tileContent>
        </GenericTile>
    </layout:HorizontalLayout>
</Page>
</mvc:View>