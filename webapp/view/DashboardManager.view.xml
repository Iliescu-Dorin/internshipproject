<mvc:View
    controllerName="intern2020.controller.DashboardManager"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout">

<Page title="{i18n>managerDashboard}" showHeader="true" class="w3-backGround" enableScrolling="false">
	<headerContent>
			<Button 
                text="SignOut" 
                press="_onSignOutPress" 
                icon="sap-icon://log">
            </Button>
	</headerContent>
			
	<layout:HorizontalLayout allowWrapping="true">
		<GenericTile
                class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                header="{i18n>toBeApproved}"
                press="_onPress">
                <tileContent>
                    <TileContent>
                        <content>
                            <NumericContent
                                    value="{
                                        path: 'reviews>/UserReviews',
                                        formatter: '.getEntityCount'
                                     }"	
									 	icon="sap-icon://pending" 
                                        indicator="None"
                                        valueColor="Neutral" />
                        </content>
                    </TileContent>
                </tileContent>
        </GenericTile>

        <GenericTile
                class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                header="{i18n>isApproved}"
                press="_onPress">
                <tileContent>
                    <TileContent>
                        <content>
                            <NumericContent
                                     value="{
                                         path: 'reviews>/UserReviews',
                                         formatter: '.getEntityCount'
                                     }"	
									 	 icon="sap-icon://accept" 
                                         indicator="None"
                                         valueColor="Good" />
                        </content>
                    </TileContent>
                </tileContent>
        </GenericTile>

		<GenericTile
                class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                header="{i18n>isDenied}"
                press="_onPress">
                <tileContent>
                    <TileContent>
                        <content>
                            <NumericContent
                                    value="{
                                         path: 'reviews>/UserReviews',
                                         formatter: '.getEntityCount'
                                     }"	
									 	 icon="sap-icon://cancel" 
                                         indicator="None"
                                         valueColor="Error" />
                        </content>
                    </TileContent>
                </tileContent>
        </GenericTile>
    </layout:HorizontalLayout>
</Page>
</mvc:View>