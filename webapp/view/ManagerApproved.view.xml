<mvc:View
    controllerName="intern2020.controller.ManagerApproved"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout">

<Page   title="{i18n>userApproved}" 
        showHeader="true" 
        class="w3-backGround" 
        enableScrolling="false" 
        showNavButton="true"
		navButtonPress="_onNavBack">
    <Table
        id="approvedManagerTable"
        headerText="{i18n>businessTrips}"
        class="sapUiResponsiveMargin"
        width="auto">

 		<columns>
			<Column 
				width="30em">
				<Text text="{i18n>employee}"/>
			</Column>
			<Column
				demandPopin="false">
				<Text text="{i18n>date}"/>
			</Column>
			<Column
				demandPopin="false">
				<Text text="{i18n>price}"/>
			</Column>
			<Column
				demandPopin="false">
				<Text text="{i18n>location}"/>
			</Column>
		</columns>

		<items>
			<ColumnListItem
				type="Navigation"
				press="_onPress">
				<cells>
					<ObjectIdentifier id="employeeName" title="{invoice>name}"/>
					<Text text="{invoice>description}"/>
					<Text text="{invoice>rating}"/>
					<Text text="{invoice>categorie}"/>
					<Text text="{invoice>studio}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</Page>
</mvc:View>