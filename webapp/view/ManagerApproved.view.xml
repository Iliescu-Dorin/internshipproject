<!-- 
	
Manager Approved View

Navigation Button -> _onNavBack
Table: Employee, Date, Price, Location
Items (type navigation) -> _onPress 

-->

<mvc:View
    controllerName="intern2020.controller.ManagerApproved"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout">

<Page   title="{i18n>userApproved}" 
		backgroundDesign="Solid"
        showHeader="true" 
        class="w3-backGround" 
        enableScrolling="false" 
        showNavButton="true"
		navButtonPress="_onNavBack">
    <Table
        id="approvedManagerTable"
		items="{
            path: '/TripSet',
			filters: [{path: 'Status', operator: 'EQ', value1: 'APPROVED'}]
        }"
        headerText="{i18n>businessTrips}"
        class="sapUiResponsiveMargin"
        width="auto">

 		<columns>
			<Column 
				width="30em">
				<Text text="{i18n>employee}"/>
			</Column>
			<Column
				demandPopin="false">
				<Text text="{i18n>date}"/>
			</Column>
			<Column
				demandPopin="false">
				<Text text="{i18n>price}"/>
			</Column>
			<Column
				demandPopin="false">
				<Text text="{i18n>location}"/>
			</Column>
		</columns>

		<items>
			<ColumnListItem
				id="list"
				type="Navigation"
				press="_onPress">
				<cells>
					<ObjectIdentifier id="employeeName" title="{FirstName} {LastName}"/>
					<Text text="{
   								path: 'StartTrip',
								type: 'sap.ui.model.type.DateTime',
								formatOptions: { 
									style: 'short' 
									} 
								}"/>
					<Text text="{TotalSum}"/>
					<Text text="{TravelCountry}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</Page>
</mvc:View>