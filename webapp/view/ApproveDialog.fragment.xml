<!-- 
   
Reject Dialog 

Icon 
Input for rejection reason
Submit Button -> _onSubmitDialog 

-->

<core:FragmentDefinition
   controllerName="intern2020.controller.DetailToBeApproved"
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      id="dialog_approved"
      title="Approve">
      <content>
         <VBox>  
            <Text class="dialogText" text="Are you sure you want to approve?"/>       
         </VBox>
      </content>

      <buttons>
            <Button
               text="Cancel"
               press="_onCancelApprove"/>
            <Button
               text="Approve"
               press="_onSubmitApprove"/>
      </buttons>
   </Dialog>
</core:FragmentDefinition>