<!-- 

LOGIN VIEW 
*the user or manager can login using an email and a password

E-mail Input -> _validateEmail (the email will be validated to respect the 'name@email.com' format)
Password Input 
Login Button -> _onLoginPress (navigation to the user/manager dashoard based on the position from the data base)

-->

<mvc:View
    controllerName="intern2020.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m">

<Page id="page_login" backgroundDesign="Transparent" showHeader="false" enableScrolling="false">
	<content>
		<HBox>
		<VBox class="containerLogin" justifyContent="Center" alignItems="Center" alignContent="Center">
			
			<VBox>
				<core:Icon
					src="sap-icon://customer"
					size="10rem"
					class="sapUiLargeMargin"/>
			</VBox>

			<VBox class="inputLogin">
				<Input placeholder="E-Mail Address" id="input_email" type="Email" change="_validateEmail"/>
				<Input placeholder="Password" id="input_password" type="Password"/>
				<Button 
					width="20rem" 
					text="Login" 
					type="Emphasized" 
					press="_onLoginPress">
				</Button>
			</VBox>
		</VBox>
		
		<Image src="MHP19_00012.png"/>
		</HBox>
	</content>
</Page>
</mvc:View>