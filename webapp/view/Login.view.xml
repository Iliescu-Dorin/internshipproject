<mvc:View
    controllerName="intern2020.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
<Page title="Login Page" showHeader="true" enableScrolling="false">
	<content >

		<VBox class="containerLogin" justifyContent="Center" alignItems="Center" alignContent="Center">

			<VBox>
				<core:Icon
					src="sap-icon://customer"
					size="6rem"
					class="sapUiMediumMargin"/>
			</VBox>

			<VBox>

				<Input placeholder="E-Mail address" id="emailInput" type="Email" change="validateEmail"/>
				<Input type="Password" id="passwordInput" placeholder="Password"  />
				<Button width="12rem" text="Login" type="Emphasized" press=".onLoginPress"></Button>
			</VBox>

		</VBox>
	</content>

</Page>
</mvc:View>