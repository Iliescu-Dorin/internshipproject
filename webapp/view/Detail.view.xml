<mvc:View
    controllerName="intern2020.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">

<Page   title="Form" 
        showHeader="true" 
        class="w3-backGround" 
        enableScrolling="true" 
        showNavButton="true"
		navButtonPress="_onNavBack">
    
	<content>
		<VBox class="sapUiSmallMargin">
			<f:Form id="FormToolbar"
					editable="true"
					ariaLabelledBy="Title1">

				<f:toolbar>
					<Toolbar id="TB1">
						<Title id="Title1" text="{i18n>generalInfo}"/>
						<ToolbarSpacer />
					</Toolbar>
				</f:toolbar>

				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="4"
						labelSpanL="3"
						labelSpanM="4"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="4"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>
				<f:formContainers>
					<f:FormContainer ariaLabelledBy="Title2">
						<f:formElements>
							<f:FormElement label="{i18n>formName}">
								<f:fields>
									<Input id="nameInput" />
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formEmail}">
								<f:fields>
									<Input id="emailInput" type="Email"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formSupervisor}">
								<f:fields>
									<Input id="supervisorInput"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formPhoneNumber}">
								<f:fields>
									<Input id="phoneInput" type="Tel"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>				
				</f:formContainers>
			</f:Form>
		</VBox>

		<VBox class="sapUiSmallMargin">
			<f:Form id="FormToolbar2"
					editable="true"
					ariaLabelledBy="Title3">

				<f:toolbar>
					<Toolbar id="TB2">
						<Title id="Title3" text="{i18n>infoCountry}"/>
						<ToolbarSpacer />
					</Toolbar>
				</f:toolbar>

				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="4"
						labelSpanL="3"
						labelSpanM="4"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="4"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>
				<f:formContainers>
					<f:FormContainer ariaLabelledBy="Title4">
						<f:formElements>
							<f:FormElement label="{i18n>formReason}">
								<f:fields>
									<Input id="reasonInput"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formRequestor}">
								<f:fields>
									<Input id="requestorInput"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formCountry}">
								<f:fields>
									<Input id="countryInput"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formCity}">
								<f:fields>
									<Input id="cityInput"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>				
				</f:formContainers>
			</f:Form>
		</VBox>

		<VBox class="sapUiSmallMargin">
			<f:Form id="FormToolbar3"
					editable="true"
					ariaLabelledBy="Title5">

				<f:toolbar>
					<Toolbar id="TB3">
						<Title id="Title5" text="{i18n>tripRequest}"/>
						<ToolbarSpacer />
					</Toolbar>
				</f:toolbar>

				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="4"
						labelSpanL="3"
						labelSpanM="4"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="4"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>
				<f:formContainers>
					<f:FormContainer ariaLabelledBy="Title6">
						<f:formElements>
							<f:FormElement label="{i18n>formCosts}">
								<f:fields>
									<Input id="costsInput" type="Number"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formStartBT}">
								<f:fields>
									<Input id="startInput"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formEndBT}">
								<f:fields>
									<Input id="endInput"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formAdvancePay}">
								<f:fields>
									<Select width="100%" id="payInput">
									<items>
										<core:Item text=""/>
										<core:Item text="Yes" key="yesPay"/>
										<core:Item text="No" key="noPay"/>
									</items>
									</Select>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>				
				</f:formContainers>
			</f:Form>
		</VBox>
	</content>

	<footer>
			<OverflowToolbar id="obtFooter">
				<ToolbarSpacer/>
				<Button type="Accept" text="Approve">
					<layoutData><OverflowToolbarLayoutData priority="NeverOverflow" /></layoutData>
				</Button>
				<Button type="Reject" text="Reject">
					<layoutData><OverflowToolbarLayoutData priority="NeverOverflow" /></layoutData>
				</Button>
			</OverflowToolbar>
		</footer>
</Page>
</mvc:View>