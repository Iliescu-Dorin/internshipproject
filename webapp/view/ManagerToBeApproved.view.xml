<!-- 
	
Manager To Be Approved View

Navigation Button -> _onNavBack
Table: Employee, Date, Price, Location
Items (type navigation) -> _onPress 

-->

<mvc:View
    controllerName="intern2020.controller.ManagerToBeApproved"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout">

<Page   title="{i18n>usertoBeApproved}" 
        showHeader="true" 
		backgroundDesign="Solid"
        class="w3-backGround" 
        enableScrolling="false" 
        showNavButton="true"
		navButtonPress="_onNavBack">
    <Table
        id="toBeApprovedManagerTable"
		items="{
            path: '/TripSet',
			filters: [{path: 'Status', operator: 'EQ', value1: 'IN PROGRESS'}]
        }"
        class="sapUiResponsiveMargin"
        width="auto">

		<headerToolbar>
         <Toolbar>
		 	<Title id="managerTBA_table" text=""/>
         </Toolbar>
      	</headerToolbar>

 		<columns>
			<Column 
				width="30em">
				<Text text="{i18n>employee}"/>
			</Column>
			<Column
				demandPopin="false">
				<Text text="{i18n>date}"/>
			</Column>
			<Column
				demandPopin="false">
				<Text text="{i18n>price}"/>
			</Column>
			<Column
				demandPopin="false">
				<Text text="{i18n>location}"/>
			</Column>
		</columns>

		<items>
			<ColumnListItem
				type="Navigation"
				press="_onPress">
				<cells>
					<ObjectIdentifier id="employeeName" title="{FirstName} {LastName}"/>
					<Text text="{
   								path: 'StartTrip',
								type: 'sap.ui.model.type.Date',
								formatOptions: { 
									style: 'short' 
									} 
								}"/>
					<Text text="{TotalSum}"/>
					<Text text="{TravelCountry}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</Page>
</mvc:View>