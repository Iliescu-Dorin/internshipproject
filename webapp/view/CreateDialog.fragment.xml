<!-- 
   
APPROVE DIALOG
*the manager needs to confirm that he wants to approve a business trip

Submit Button -> _onSubmitDialog (the trip changes it's status to APPROVED)
Cancel Button -> _onCancelReject (close dialog)

-->

<core:FragmentDefinition
   controllerName="intern2020.controller.AdminDashboard"
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      id="dialog_create"
      title="Create">
      <content>
         <VBox>  
            <Text class="dialogText" text="Are you sure you want to create an user?"/>       
         </VBox>
      </content>

      <buttons>
            <Button
               text="Cancel"
               press="_onCancelCreate"/>
            <Button
               text="Approve"
               press="_onSubmitCreate"/>
      </buttons>
   </Dialog>
</core:FragmentDefinition>