<!-- 

LOGIN VIEW 
*the user or manager can login using an email and a password

E-mail Input -> _validateEmail (the email will be validated to respect the 'name@email.com' format)
Password Input 
Login Button -> _onLoginPress (navigation to the user/manager dashoard based on the position from the data base)

-->

<mvc:View
    controllerName="intern2020.controller.AdminDashboard"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m">

<Page 	title="Admin Page" 
        showHeader="true"
		backgroundDesign="Solid" 
        class="w3-backGround" 
        enableScrolling="true">

	<headerContent>
			<Button 
                ariaLabelledBy="Sign out" 
                press="_onSignOutPress" 
                icon="sap-icon://log">
            </Button>
	</headerContent>

	<content>
		<VBox class="adminLogic" justifyContent="Center" alignItems="Center" alignContent="Center">

			<VBox class="inputLogin">
                <Label text="Create or Update an employee: " />
				<Input placeholder="E-Mail Address" id="input_email" type="Email" change="_validateEmail"/>
				<Input placeholder="Password" id="input_password" type="Password"/>
				<Input placeholder="Confirm Password" id="input_confirm" type="Password"/>
                <Select id="select_position" autoAdjustWidth="false" width="20em" forceSelection="true">
				    <core:Item key="MANAGER" text="MANAGER" />
				    <core:Item key="USER" text="USER" />
				    <core:Item key="ADMIN" text="ADMIN" />
			    </Select>

					<Button 
					    width="20rem" 
					    text="Create" 
					    type="Emphasized" 
					    press="_onCreatePress">
				    </Button>
                    <Button 
					    width="20rem" 
					    text="Update" 
					    type="Emphasized" 
					    press="_onUpdatePress">
				    </Button>


			</VBox>
		</VBox>
	</content>
</Page>
</mvc:View>