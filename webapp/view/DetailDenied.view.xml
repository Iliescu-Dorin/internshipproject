<!-- 
	
Details for denied business trips 

Navigation Button -> _onNavBack
Content 1: General Information
								-Name Label + Input
								-Email Label + Input
								-Supervisor Label + Input
								-Phone Number Label + Input

Content 2: Information About Travel Country
								-Reason For Travel Label + Input
								-Requestor Label + Input
								-Country Label + Input
								-City Label + Input

Content 3: Business Trip Request
								-Total Costs Label + Input
								-Start Business Trip Label + Input
								-End Business Trip Label + Input
								-Advance Payment Needed Label + Input 
							
Content 4: Reason For Rejection 
								-Explanation Label + Input
								
-->

<mvc:View
    controllerName="intern2020.controller.DetailDenied"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">

<Page   title="Form" 
        showHeader="true" 
        class="w3-backGround" 
        enableScrolling="true" 
        showNavButton="true"
		navButtonPress="_onNavBack">
    
	<content>
		<VBox class="sapUiSmallMargin">
			<f:Form id="FormToolbar"
					editable="true"
					ariaLabelledBy="Title1">

				<f:toolbar>
					<Toolbar id="TB1">
						<Title id="Title1" text="{i18n>generalInfo}"/>
						<ToolbarSpacer />
					</Toolbar>
				</f:toolbar>

				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="4"
						labelSpanL="3"
						labelSpanM="4"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="4"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>
				<f:formContainers>
					<f:FormContainer ariaLabelledBy="Title2" >
						<f:formElements>
							<f:FormElement label="{i18n>formName}">
								<f:fields>
									<Input id="nameInput" type="Text" enabled="true" editable="false"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formEmail}">
								<f:fields>
									<Input id="emailInput" type="Email" enabled="true" editable="false"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formSupervisor}">
								<f:fields>
									<Input id="supervisorInput" type="Text" enabled="true" editable="false"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formPhoneNumber}">
								<f:fields>
									<Input id="phoneInput" type="Tel" enabled="true" editable="false"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>				
				</f:formContainers>
			</f:Form>
		</VBox>

		<VBox class="sapUiSmallMargin">
			<f:Form id="FormToolbar2"
					editable="true"
					ariaLabelledBy="Title3">

				<f:toolbar>
					<Toolbar id="TB2">
						<Title id="Title3" text="{i18n>infoCountry}"/>
						<ToolbarSpacer />
					</Toolbar>
				</f:toolbar>

				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="4"
						labelSpanL="3"
						labelSpanM="4"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="4"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>
				<f:formContainers>
					<f:FormContainer ariaLabelledBy="Title4">
						<f:formElements>
							<f:FormElement label="{i18n>formReason}">
								<f:fields>
									<Input id="reasonInput" type="Text" enabled="true" editable="false"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formRequestor}">
								<f:fields>
									<Input id="requestorInput" type="Text" enabled="true" editable="false"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formCountry}" >
								<f:fields>
									<Input id="countryInput" type="Text" enabled="true" editable="false"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formCity}">
								<f:fields>
									<Input id="cityInput" type="Text" enabled="true" editable="false"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>				
				</f:formContainers>
			</f:Form>
		</VBox>

		<VBox class="sapUiSmallMargin">
			<f:Form id="FormToolbar3"
					editable="true"
					ariaLabelledBy="Title5">

				<f:toolbar>
					<Toolbar id="TB3">
						<Title id="Title5" text="{i18n>tripRequest}"/>
						<ToolbarSpacer />
					</Toolbar>
				</f:toolbar>

				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="4"
						labelSpanL="3"
						labelSpanM="4"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="4"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>
				<f:formContainers>
					<f:FormContainer ariaLabelledBy="Title6">
						<f:formElements>
							<f:FormElement label="{i18n>formCosts}">
								<f:fields>
									<Input id="costsInput" type="Text" enabled="true" editable="false"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formStartBT}">
								<f:fields>
									<Input id="startInput" type="Text" enabled="true" editable="false"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formEndBT}">
								<f:fields>
									<Input id="endInput" type="Text" enabled="true" editable="false"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formAdvancePay}">
								<f:fields>
									<Select width="100%" id="payInput" enabled="true" editable="false">
									<items>
										<core:Item text=""/>
										<core:Item text="Yes" key="yesPay"/>
										<core:Item text="No" key="noPay"/>
									</items>
									</Select>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>				
				</f:formContainers>
			</f:Form>
		</VBox>


		<VBox class="sapUiSmallMargin">
			<f:Form id="FormToolbar4"
					editable="true"
					ariaLabelledBy="Title7">

				<f:toolbar>
					<Toolbar id="TB4">
						<Title id="Title7" text="{i18n>reasonForRejection}"/>
						<ToolbarSpacer />
					</Toolbar>
				</f:toolbar>

				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="4"
						labelSpanL="3"
						labelSpanM="4"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="4"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>
				<f:formContainers>
					<f:FormContainer ariaLabelledBy="Title8">
						<f:formElements>
							<f:FormElement label="{i18n>formReasonRejection}">
								<f:fields>
									<Input id="denialInput" type="Text" enabled="true" editable="false"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>				
				</f:formContainers>
			</f:Form>
		</VBox>
	</content>
</Page>
</mvc:View>