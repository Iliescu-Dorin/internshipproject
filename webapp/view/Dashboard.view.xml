<!-- 
    
User Dashboard View

Sign out Button -> _onSignOutPress
Approved Tile: icon, number -> _onPressApproved
Denied Tile: icon, number -> _onPressDenied 

-->

<mvc:View
    controllerName="intern2020.controller.Dashboard"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout">

<Page title="{i18n>userDashboard}" showHeader="true" class="w3-backGround" enableScrolling="false">
	<headerContent>
			<Button 
                text="SignOut" 
                press="_onSignOutPress" 
                icon="sap-icon://log">
            </Button>
	</headerContent>
			
	<layout:HorizontalLayout allowWrapping="true">
		<GenericTile
                class="sapUiLargeMarginBegin sapUiTinyMarginTop"
                header="{i18n>isApproved}"
                press="_onPressApproved">
                <tileContent>
                    <TileContent>
                        <content>
                            <NumericContent
                                    value="{
                                         path: 'reviews>/UserReviews',
                                         formatter: '.getEntityCount'
                                     }"	
									 	 icon="sap-icon://accept" 
                                         indicator="None"
                                         valueColor="Good" />
                        </content>
                    </TileContent>
                </tileContent>
        </GenericTile>

		<GenericTile
                class="sapUiLargeMarginBegin sapUiTinyMarginTop"
                header="{i18n>isDenied}"
                press="_onPressDenied">
                <tileContent>
                    <TileContent>
                        <content>
                            <NumericContent
                                    value="{
                                         path: 'reviews>/UserReviews',
                                         formatter: '.getEntityCount'
                                     }"	
									 	 icon="sap-icon://cancel" 
                                         indicator="None"
                                         valueColor="Error" />
                        </content>
                    </TileContent>
                </tileContent>
        </GenericTile>
    </layout:HorizontalLayout>
</Page>
</mvc:View>