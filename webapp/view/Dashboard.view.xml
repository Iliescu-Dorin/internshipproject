<mvc:View
    controllerName="intern2020.controller.Dashboard"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout">
<Page title="User Dashboard" showHeader="true" class="w3-backGround" enableScrolling="false">
	<headerContent>
			<Button text="SignOut" press=".onSignOutPress" icon="sap-icon://log"/>
	</headerContent>
			
	<layout:HorizontalLayout allowWrapping="true">
				<GenericTile
                     class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                     header="{i18n>isApproved}">
                     <tileContent>
                         <TileContent>
                             <content>
                                 <NumericContent
                                     value="{
                                         path: 'reviews>/UserReviews',
                                         formatter: '.getEntityCount'
                                     }"	
									 	 icon="sap-icon://accept" 
                                         indicator="None"
                                         valueColor="Good" />
                             </content>
                         </TileContent>
                     </tileContent>
                 </GenericTile>

				 <GenericTile
                     class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                     header="{i18n>isDenied}">
                     <tileContent>
                         <TileContent>
                             <content>
                                 <NumericContent
                                     value="{
                                         path: 'reviews>/UserReviews',
                                         formatter: '.getEntityCount'
                                     }"	
									 	 icon="sap-icon://cancel" 
                                         indicator="None"
                                         valueColor="Error" />
                             </content>
                         </TileContent>
                     </tileContent>
                 </GenericTile>
            </layout:HorizontalLayout>
</Page>
</mvc:View>