<!-- 
   
APPROVE DIALOG
*the manager needs to confirm that he wants to approve a business trip

Submit Button -> _onSubmitDialog (the trip changes it's status to APPROVED)
Cancel Button -> _onCancelReject (close dialog)

-->

<core:FragmentDefinition
   controllerName="intern2020.controller.NewTrip"
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      id="dialog_newTrip"
      title="Save">
      <content>
         <VBox>  
            <Text class="dialogText" text="Are you sure you want to create a trip?"/>       
         </VBox>
      </content>

      <buttons>
            <Button
               text="Cancel"
               press="_onCancelNewTrip"/>
            <Button
               text="Approve"
               press="_onSubmitNewTrip"/>
      </buttons>
   </Dialog>
</core:FragmentDefinition>