<!-- 
	
NEW TRIP VIEW 
*the user can add a new trip to the data base using form and input fields

Navigation Button -> _onNavBack (navigation to the User Dashboard)
Footer Button -> _onSavePress (the trip is added to the data base)
Footer Button -> _onCancelPress (navigation to the User Dashboard)

-->

<mvc:View
    controllerName="intern2020.controller.NewTrip"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">

<Page   id="page_newTrip"
		title="Add New Trip"
        showHeader="true" 
        backgroundDesign="Solid"
        class="w3-backGround" 
        enableScrolling="true" 
        showNavButton="true"
		navButtonPress="_onNavBack">
    
	<content>
		<VBox class="sapUiMediumMargin" >
			<f:Form id="form_newTrip"
					editable="true">

				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="4"
						labelSpanL="4"
						labelSpanM="4"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="3"
						columnsL="2"
						columnsM="2"
						singleContainerFullSize="false"  />
				</f:layout>

				<f:formContainers>
					<f:FormContainer title="Requester Information">
						<f:formElements>
							<f:FormElement label="Email Address">
								<f:fields>
									<Input type="Email" id="input_email" required="true"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Job Number">
								<f:fields>
									<Input type="Number" id="input_jobNumber" required="true"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Requster Name">
								<f:fields>
									<Input  id="input_requester" required="true"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>

					<f:FormContainer title="Trip Information">
						<f:formElements>
							<f:FormElement label="Client name">
								<f:fields>
									<Input id="input_client"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Travel reason">
								<f:fields>
									<Input id="input_reason"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Start Trip/End Trip">
								<f:fields>
									<DateTimePicker
										id="input_startDate"
										placeholder="Start"
										required="true"
										valueFormat="yyyy-MM-ddTHH:mm:ss" 
										displayFormat="long"
										change="handleChange">
										<layoutData>
											<l:GridData span="XL2 L4 M2 S4" />
										</layoutData>
									</DateTimePicker>
									<DateTimePicker
										id="input_endDate"
										required="true"
										placeholder="End"
										valueFormat="yyyy-MM-ddTHH:mm:ss" 
										change="handleChange">
										<layoutData>
											<l:GridData span="XL2 L4 M2 S4" />
										</layoutData>
									</DateTimePicker>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Number of days">
								<f:fields>
									<Input type="Number" id="input_noDays" required="true"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Country/City">
								<f:fields>
									<Input id="input_country">
										<layoutData>
											<l:GridData span="XL2 L4 M2 S4" />
										</layoutData>
									</Input>
									<Input id="input_city">
										<layoutData>
											<l:GridData span="XL2 L4 M2 S4" />
										</layoutData>
									</Input>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>

					<f:FormContainer title="Travel Costs">
						<f:formElements>
							<f:FormElement>
								<f:fields>
									<Label text="(Please enter the sum of money needed.)"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Air fare">
								<f:fields>
									<Input type="Number" id="input_airFare"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Train ticket">
								<f:fields>
									<Input type="Number" id="input_train"/>
								</f:fields>
							</f:FormElement>
                            <f:FormElement label="Car rental">
								<f:fields>
									<Input type="Number" id="input_car"/>
								</f:fields>
							</f:FormElement>
                            <f:FormElement label="Gas">
								<f:fields>
									<Input type="Number" id="input_gas"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Hotel costs">
								<f:fields>
									<Input type="Number" id="input_hotel"/>
								</f:fields>
							</f:FormElement>
                            <f:FormElement label="Bank charges">
								<f:fields>
									<Input type="Number" id="input_bank"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>


					<f:FormContainer title="Additional Costs">
						<f:formElements>
							<f:FormElement>
								<f:fields>
									<Label text="(Please enter the sum of money needed.)"/>
								</f:fields>
							</f:FormElement>
                            <f:FormElement label="Business meals">
								<f:fields>
									<Input type="Number" id="input_meals"/>
								</f:fields>
							</f:FormElement>
                            <f:FormElement label="Food beverages">
								<f:fields>
									<Input type="Number" id="input_food"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="IT supplies">
								<f:fields>
									<Input type="Number" id="input_it"/>
								</f:fields>
							</f:FormElement>
                            <f:FormElement label="Office supplies">
								<f:fields>
									<Input type="Number" id="input_office"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>

					<f:FormContainer title="Payment Details">
						<f:formElements>
							<f:FormElement label="PerDiemRate">
								<f:fields>
									<Input type="Number" id="input_rate"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="PerDiemAllowance">
								<f:fields>
									<Input type="Number" id="input_allowance"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Advance payment needed">
								<f:fields>
									<Select id="input_aPayment">
											<items>
												<core:Item text="YES" key="YES"/>
												<core:Item text="NO" key="NO"/>
											</items>
									</Select>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Advance sum">
								<f:fields>
									<Input type="Number" id="input_aSum"/>
								</f:fields>
							</f:FormElement>
                            <f:FormElement label="Currency/Exchange Rate">
								<f:fields>
									<Select id="input_currency">
										<items>
											<core:Item text="EUR" key="EUR"/>
											<core:Item text="RON" key="RON"/>
											<core:Item text="HUF" key="HUF"/>
											<core:Item text="USD" key="USD"/>
											<core:Item text="GBP" key="GBP"/>
										</items>
										<layoutData>
											<l:GridData span="XL2 L4 M2 S4" />
										</layoutData>
									</Select>
									<Input type="Number" id="input_exchange">
										<layoutData>
											<l:GridData span="XL2 L4 M2 S4" />
										</layoutData>
									</Input>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>	
				</f:formContainers>
			</f:Form>
		</VBox>
	</content>

	<footer class="footerNew">
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Reject" text="Cancel" press="_onCancelPress"/>
				<Button type="Accept" text="Save" press="_onSavePress"/>
			</OverflowToolbar>
	</footer>
</Page>
</mvc:View>