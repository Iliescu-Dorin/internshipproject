<!-- 
   
Reject Dialog 

Icon 
Input for rejection reason
Submit Button -> _onSubmitDialog 

-->

<core:FragmentDefinition
   controllerName="intern2020.controller.DetailToBeApproved"
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      id="rejectDialog"
      title="Reason for rejection">
      <content>
         <VBox justifyContent="Center" alignItems="Center" alignContent="Center">
            <core:Icon
                src="sap-icon://employee-rejections"
                size="3rem"
                class="sapUiSmallMargin"/>
            
            <TextArea   id="motiveReject"
			               value=""/>
         </VBox>
      </content>

      <buttons>
            <Button
               text="Cancel"
               press="_onCancelDialog"/>
            <Button
               text="Submit"
               press="_onSubmitDialog"/>
      </buttons>
   </Dialog>
</core:FragmentDefinition>