<!-- 
   
Reject Dialog 

Icon 
Input for rejection reason
Submit Button -> _onSubmitDialog 

-->

<core:FragmentDefinition
   controllerName="intern2020.controller.DetailToBeApproved"
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      id="dialog_reject"
      title="Reject">
      <content>
         <VBox>  
            <Text class="dialogText" text="Why are you rejecting this business trip?"/>       
            <TextArea rows="4" id="textArea_reject"/>
         </VBox>
      </content>

      <buttons>
            <Button
               text="Cancel"
               press="_onCancelReject"/>
            <Button
               text="Reject"
               press="_onSubmitReject"/>
      </buttons>
   </Dialog>
</core:FragmentDefinition>