<!-- 
	
DETAIL TO BE APPROVED VIEW
*the manager can see the detail about the selected business trip from the form

Navigation Button -> _onNavBack (navigation to the Manager To Be Approved View)
Content 1: General Information
								-Name Label + Input
								-Email Label + Input
								-Supervisor Label + Input
								-Phone Number Label + Input

Content 2: Information About Travel Country
								-Reason For Travel Label + Input
								-Requestor Label + Input
								-Country Label + Input
								-City Label + Input

Content 3: Business Trip Request
								-Total Costs Label + Input
								-Start Business Trip Label + Input
								-End Business Trip Label + Input
								-Advance Payment Needed Label + Input 

Footer: Accept Button -> _onApprovedPress (navTo approve dialog to confirm)
		Reject Button -> _onRejectPress (navTo reject dialog to enter a rejection reason)
								
-->

<mvc:View
    controllerName="intern2020.controller.DetailToBeApproved"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">

<Page   id="page_toBeApproved"
		title="{FirstName} {LastName}'s Business Trip ({	path: 'StartTrip',
															type: 'sap.ui.model.type.Date',
															formatOptions: { 
																		style: 'short' 
															} 
														} - {	path: 'EndTrip',
															type: 'sap.ui.model.type.Date',
															formatOptions: { 
																		style: 'short' 
															} 
														})" 
        showHeader="true" 
		backgroundDesign="Solid"
        class="w3-backGround" 
        enableScrolling="true" 
        showNavButton="true"
		navButtonPress="_onNavBack">
    
	<content>
		<VBox class="sapUiSmallMargin">
			<f:Form id="form_generalInfo"
					editable="false">

				<f:toolbar>
					<Toolbar id="toolbar_generalInfo">
						<Title id="title_generalInfo" text="{i18n>generalInfo}"/>
						<ToolbarSpacer />
					</Toolbar>
				</f:toolbar>

				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="4"
						emptySpanL="4"
						emptySpanM="4"
						emptySpanS="0"
						columnsXL="1"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false"  />
				</f:layout>
				
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="{i18n>formName}">
								<f:fields>
									<Text id="input_name" text="{LastName} {FirstName}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formEmail}">
								<f:fields>
									<Text id="input_email" text="{EmailAddress}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formSupervisor}">
								<f:fields>
									<Text id="input_supervisor" text="{SupervisorName}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formPhoneNumber}">
								<f:fields>
									<Text id="input_phone" text="{Phonenumber}"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>				
				</f:formContainers>
			</f:Form>
		</VBox>

		<VBox class="sapUiLargeMargin">
			<f:Form id="form_infoCountry"
					editable="false">

				<f:toolbar>
					<Toolbar id="toolbar_infoCountry">
						<Title id="title_infoCountry" text="{i18n>infoCountry}"/>
						<ToolbarSpacer />
					</Toolbar>
				</f:toolbar>

				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="4"
						emptySpanL="4"
						emptySpanM="4"
						emptySpanS="0"
						columnsXL="1"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>

				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="{i18n>formReason}">
								<f:fields>
									<Text id="input_reason" text="{Reason}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formRequestor}">
								<f:fields>
									<Text id="input_requestor" text="{Requester}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formCountry}" >
								<f:fields>
									<Text id="input_country" text="{TravelCountry}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formCity}">
								<f:fields>
									<Text id="input_city" text="{TravelCity}"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>				
				</f:formContainers>
			</f:Form>
		</VBox>

		<VBox class="sapUiLargeMargin">
			<f:Form id="form_tripRequest"
					editable="false">

				<f:toolbar>
					<Toolbar id="toolbar_tripRequest">
						<Title id="title_tripRequest" text="{i18n>tripRequest}"/>
						<ToolbarSpacer />
					</Toolbar>
				</f:toolbar>

				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="4"
						emptySpanL="4"
						emptySpanM="4"
						emptySpanS="0"
						columnsXL="1"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false"  />
				</f:layout>

				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="{i18n>formCosts}">
								<f:fields>
									<Text id="input_costs" text="{TotallSum} RON"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formStartBT}">
								<f:fields>
									<Text id="input_startDate" text="{
   																	path: 'StartTrip',
																	type: 'sap.ui.model.type.Date',
																	formatOptions: { 
																			style: 'long' 
																	} 
																}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formEndBT}">
								<f:fields>
									<Text id="input_endDate" text="{
   																	path: 'EndTrip',
																	type: 'sap.ui.model.type.Date',
																	formatOptions: { 
																			style: 'long' 
																	} 
																}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>formAdvancePay}">
								<f:fields>
									<Text id="input_aPayment"  text="{AdvancePayment}"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>				
				</f:formContainers>
			</f:Form>
		</VBox>
	</content>

	<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Approve" press="_onApprovedPress"/>
				<Button type="Reject" text="Reject" press="_onRejectPress"/>
			</OverflowToolbar>
	</footer>

</Page>
</mvc:View>